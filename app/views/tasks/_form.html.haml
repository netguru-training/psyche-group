= simple_form_for [project,task] do |f|
  - if task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - task.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.input :name
  .form-group
    = f.input :description
  .form-group
    = f.association :user, label_method: :email, value_method: :id
  .form-group
    = f.input :deadline, as: :string, input_html: {class: 'datetimepicker', placeholder: 'Click to add date'}
  .form-group
    = f.association :priority
  .form-group
    = f.association :status
  .actions.form-group
    = f.button :submit, 'Save'
